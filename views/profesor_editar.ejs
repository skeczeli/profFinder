<!-- views/profesor_editar.ejs -->
<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Editar Profesor | Sistema de Aulas</title>
    <style>
      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8f9fa;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
      }

      .container {
        width: 100%;
        max-width: 450px;
        margin: 0 auto;
        position: relative;
      }

      .home-button {
        position: fixed;
        top: 20px;
        left: 20px;
        display: inline-block;
        padding: 10px 20px;
        background-color: #4d8ad5;
        color: white;
        border-radius: 4px;
        transition: all 0.2s ease;
        text-decoration: none;
        font-weight: 600;
        z-index: 1000;
        font-size: 0.9rem;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      }

      .home-button:hover {
        background-color: #3a75c4;
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
      }

      .logout-button {
        position: fixed;
        top: 20px;
        right: 20px;
        z-index: 1000;
      }

      .logout-button button {
        display: inline-block;
        padding: 10px 20px;
        background-color: #e53e3e;
        color: white;
        border-radius: 4px;
        transition: all 0.2s ease;
        text-decoration: none;
        font-weight: 600;
        cursor: pointer;
        font-size: 0.9rem;
        border: none;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      }

      .logout-button button:hover {
        background-color: #c53030;
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
      }

      .card {
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        width: 100%;
        max-width: 380px;
        margin: 0 auto;
        transform: translateY(-15px);  /* Ligero ajuste hacia arriba */
      }

      .card-header {
        background-color: #4d8ad5;
        color: white;
        padding: 1.2rem 0;
        text-align: center;
      }

      .card-header h2 {
        margin: 0;
        font-size: 1.5rem;
        font-weight: 600;
      }

      .card-body {
        padding: 1.8rem;
      }

      .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        padding: 0.75rem 1rem;
        border-radius: 4px;
        margin-bottom: 1.2rem;
        border: 1px solid #f5c6cb;
        font-size: 0.9rem;
      }

      .form-group {
        margin-bottom: 1.2rem;
      }

      .form-label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 500;
        color: #333;
        font-size: 0.95rem;
      }

      .form-control {
        width: 100%;
        padding: 0.7rem;
        border: 1px solid #ced4da;
        border-radius: 4px;
        box-sizing: border-box;
        font-size: 1rem;
        transition: border-color 0.2s ease;
      }

      .form-control:focus {
        border-color: #4d8ad5;
        outline: none;
        box-shadow: 0 0 0 3px rgba(77, 138, 213, 0.15);
      }

      .form-text {
        display: block;
        margin-top: 0.25rem;
        font-size: 0.875rem;
        color: #6c757d;
      }

      .btn-row {
        display: flex;
        justify-content: space-between;
        margin-top: 1.8rem;
      }

      .btn {
        padding: 0.7rem 1.2rem;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 0.95rem;
        text-decoration: none;
        display: inline-block;
        transition: all 0.2s ease;
        font-weight: 500;
      }

      .btn-secondary {
        background-color: #6c757d;
        color: white;
      }

      .btn-primary {
        background-color: #4d8ad5;
        color: white;
      }

      .btn-secondary:hover {
        background-color: #5a6268;
        transform: translateY(-2px);
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      }

      .btn-primary:hover {
        background-color: #3a75c4;
        transform: translateY(-2px);
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      }

      @media (max-width: 576px) {
        .card {
          margin: 1rem;
          max-width: 100%;
        }
        
        .btn-row {
          flex-direction: column;
          gap: 1rem;
        }

        .btn {
          width: 100%;
          text-align: center;
        }
        
        .home-button, .logout-button button {
          padding: 8px 16px;
          font-size: 0.85rem;
        }
      }
    </style>
  </head>
  <body>
    <a href="/" class="home-button">Home</a>
    <form action="/admin/logout" method="POST" class="logout-button">
      <button type="submit">
        Cerrar sesi√≥n
      </button>
    </form>

      <div class="card">
        <div class="card-header">
          <h2>Editar Profesor</h2>
        </div>
        <div class="card-body">
          <% if (error) { %>
          <div class="alert-danger"><%= error %></div>
          <% } %>

          <form
            action="/admin/profesores/actualizar/<%= profesor.profesor_id %>"
            method="POST"
          >
            <div class="form-group">
              <label for="nombre" class="form-label">Nombre completo:</label>
              <input
                type="text"
                class="form-control"
                id="nombre"
                name="nombre"
                value="<%= profesor.nombre %>"
                required
              />
            </div>

            <div class="form-group">
              <label for="email" class="form-label">Email:</label>
              <input
                type="email"
                class="form-control"
                id="email"
                name="email"
                value="<%= profesor.email || '' %>"
              />
            </div>

            <div class="form-group">
              <label for="tarjeta_id" class="form-label">ID de Tarjeta:</label>
              <input
                type="text"
                class="form-control"
                id="tarjeta_id"
                name="tarjeta_id"
                value="<%= profesor.tarjeta_id %>"
                required
              />
            </div>

            <div class="btn-row">
              <a href="/db_admin" class="btn btn-secondary">Cancelar</a>
              <button type="submit" class="btn btn-primary">
                Guardar cambios
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
