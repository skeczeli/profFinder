<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Gestión Académica</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        position: relative;
        overflow-x: hidden;
        padding: 20px;
      }

      /* Elementos decorativos de fondo */
      body::before {
        content: '';
        position: fixed;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(255,255,255,0.1) 1px, transparent 1px);
        background-size: 50px 50px;
        animation: float 20s ease-in-out infinite;
        z-index: 1;
        pointer-events: none;
      }

      @keyframes float {
        0%, 100% { transform: translateY(0px) rotate(0deg); }
        50% { transform: translateY(-20px) rotate(180deg); }
      }

      /* Header principal */
      .main-header {
        text-align: center;
        margin: 40px 0 50px 0;
        position: relative;
        z-index: 10;
      }

      h1 {
        font-size: 3rem;
        font-weight: 700;
        background: rgba(255, 255, 255, 0.95);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-shadow: 0 0 30px rgba(255, 255, 255, 0.5);
        margin-bottom: 10px;
        letter-spacing: -1px;
      }

      .subtitle {
        color: rgba(255, 255, 255, 0.9);
        font-size: 1.2rem;
        font-weight: 400;
      }

      /* Botones de navegación */
      .home-button {
        position: fixed;
        top: 30px;
        left: 30px;
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        color: white;
        border: 1px solid rgba(255, 255, 255, 0.3);
        border-radius: 12px;
        padding: 12px 24px;
        font-size: 0.95rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        z-index: 100;
      }

      .home-button:hover {
        background: rgba(255, 255, 255, 0.3);
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
      }

      .logout-button {
        position: fixed;
        top: 30px;
        right: 30px;
        z-index: 100;
      }

      .logout-button button {
        background: rgba(229, 62, 62, 0.2);
        backdrop-filter: blur(10px);
        color: white;
        border: 1px solid rgba(229, 62, 62, 0.3);
        border-radius: 12px;
        padding: 12px 24px;
        font-size: 0.95rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
      }

      .logout-button button:hover {
        background: rgba(229, 62, 62, 0.3);
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(229, 62, 62, 0.2);
      }

      /* Mensajes de error */
      .error-message {
        background: rgba(244, 67, 54, 0.9);
        color: white;
        border-radius: 12px;
        padding: 16px 24px;
        text-align: center;
        margin: 0 auto 30px;
        max-width: 600px;
        font-weight: 500;
        box-shadow: 0 8px 25px rgba(244, 67, 54, 0.3);
        animation: shake 0.5s ease-in-out;
        position: relative;
        z-index: 10;
      }

      @keyframes shake {
        0%, 100% { transform: translateX(0); }
        25% { transform: translateX(-5px); }
        75% { transform: translateX(5px); }
      }

      /* Botones de pestañas */
      .tab-buttons {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 12px;
        margin-bottom: 40px;
        position: relative;
        z-index: 10;
      }

      .collapsible {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(10px);
        color: white;
        border: 1px solid rgba(255, 255, 255, 0.3);
        border-radius: 12px;
        padding: 12px 20px;
        font-size: 0.95rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        outline: none;
        white-space: nowrap;
        flex-shrink: 0;
        width: auto;
        display: inline-block;
      }

      .collapsible:hover,
      .collapsible.active {
        background: rgba(255, 255, 255, 0.25);
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
      }

      /* Contenedor principal */
      .container {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 30px;
        position: relative;
        z-index: 10;
      }

      /* Contenido de pestañas */
      .tab-content {
        display: none;
        width: 100%;
        flex-direction: column;
        align-items: center;
        gap: 30px;
        animation: fadeIn 0.5s ease-out;
      }

      .tab-content.active {
        display: flex;
      }

      @keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
      }

      /* Contenedores de formularios */
      .form-container {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
        padding: 40px 35px;
        width: 100%;
        max-width: 500px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        transition: all 0.3s ease;
      }

      .form-container:hover {
        transform: translateY(-5px);
        box-shadow: 0 25px 70px rgba(0, 0, 0, 0.2);
      }

      /* Títulos de secciones */
      h2 {
        color: #1a3b5d;
        font-weight: 700;
        margin-bottom: 30px;
        font-size: 1.8rem;
        text-align: center;
        letter-spacing: -0.5px;
      }

      /* Grupos de inputs */
      .input-group {
        margin-bottom: 24px;
      }

      label {
        display: block;
        font-size: 0.95rem;
        color: #4a5568;
        margin-bottom: 8px;
        font-weight: 600;
      }

      input,
      select {
        width: 100%;
        padding: 16px 20px;
        border: 2px solid #e2e8f0;
        border-radius: 12px;
        font-size: 1rem;
        background: #f8fafc;
        transition: all 0.3s ease;
        outline: none;
      }

      input:focus,
      select:focus {
        border-color: #4d8ad5;
        box-shadow: 0 0 0 4px rgba(77, 138, 213, 0.1);
        background: white;
        transform: translateY(-2px);
      }

      /* Botones principales */
      button {
        background: linear-gradient(135deg, #4d8ad5, #667eea);
        color: white;
        border: none;
        border-radius: 12px;
        padding: 16px 24px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        width: 100%;
        outline: none;
      }

      button:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(77, 138, 213, 0.3);
      }

      button:active {
        transform: translateY(0);
      }

      /* Contenedores de tablas */
      .table-container {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
        padding: 35px;
        width: 100%;
        max-width: 1000px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        overflow-x: auto;
        transition: all 0.3s ease;
      }

      .table-container:hover {
        transform: translateY(-3px);
        box-shadow: 0 25px 70px rgba(0, 0, 0, 0.2);
      }

      /* Tablas */
      table {
        width: 100%;
        border-collapse: collapse;
        min-width: 600px;
      }

      th,
      td {
        padding: 16px 20px;
        text-align: left;
        border-bottom: 1px solid #e2e8f0;
        white-space: nowrap;
      }

      th {
        background: linear-gradient(135deg, #f8fafc, #e2e8f0);
        color: #1a3b5d;
        font-weight: 600;
        font-size: 0.95rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
      }

      tr {
        transition: all 0.2s ease;
      }

      tr:hover {
        background: rgba(77, 138, 213, 0.05);
        transform: scale(1.01);
      }

      /* Botones de acción */
      .btn-editar {
        background: linear-gradient(135deg, #48bb78, #38a169);
        color: white;
        padding: 8px 16px;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        text-decoration: none;
        font-size: 0.85rem;
        font-weight: 600;
        margin-right: 8px;
        display: inline-block;
        transition: all 0.2s ease;
      }

      .btn-editar:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(72, 187, 120, 0.3);
      }

      .btn-eliminar {
        background: linear-gradient(135deg, #f56565, #e53e3e);
        color: white;
        padding: 8px 16px;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        font-size: 0.85rem;
        font-weight: 600;
        display: inline-block;
        transition: all 0.2s ease;
        width: auto;
      }

      .btn-eliminar:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(245, 101, 101, 0.3);
      }

      /* Responsivo */
      @media (max-width: 768px) {
        body {
          padding: 15px;
        }

        h1 {
          font-size: 2.5rem;
        }

        .home-button,
        .logout-button {
          top: 20px;
        }

        .home-button {
          left: 20px;
          padding: 10px 18px;
          font-size: 0.9rem;
        }

        .logout-button {
          right: 20px;
        }

        .logout-button button {
          padding: 10px 18px;
          font-size: 0.9rem;
        }

        .form-container,
        .table-container {
          margin: 0 10px;
          padding: 25px 20px;
        }

        .tab-buttons {
          gap: 12px;
          margin: 0 10px 30px;
        }

        .collapsible {
          padding: 10px 16px;
          font-size: 0.9rem;
        }
      }

      @media (max-width: 480px) {
        h1 {
          font-size: 2rem;
        }

        .form-container,
        .table-container {
          margin: 0 5px;
          padding: 20px 15px;
        }

        .tab-buttons {
          gap: 8px;
          margin: 0 5px 30px;
        }

        .collapsible {
          padding: 8px 12px;
          font-size: 0.85rem;
        }

        th,
        td {
          padding: 12px 8px;
          font-size: 0.9rem;
        }
      }
    </style>
  </head>
  <body>
    <a href="/" class="home-button">Home</a>
    <form action="/admin/logout" method="POST" class="logout-button">
      <button type="submit">Cerrar sesión</button>
    </form>

    <div class="main-header">
      <h1>Gestión Académica</h1>
      <p class="subtitle">Sistema de administración integral</p>
    </div>

    <!-- Mostrar mensaje de error si vino del backend -->
    <% if (typeof error !== 'undefined' && error) { %>
    <div class="error-message"><%= error %></div>
    <% } %>

    <div class="tab-buttons">
      <button class="collapsible" onclick="openTab('profesores')">
        Profesores
      </button>
      <button class="collapsible" onclick="openTab('aulas')">
        Aulas
      </button>
      <button class="collapsible" onclick="openTab('materias')">
        Materias
      </button>
      <button class="collapsible" onclick="openTab('asignaciones')">
        Asignaciones
      </button>
    </div>

    <div class="container">
      <!-- Pestaña de Profesores -->
      <div id="profesores" class="tab-content">
        <div class="form-container">
          <h2>Registrar Profesor</h2>
          <div class="input-group">
            <label for="prof-nombre">Nombre completo</label>
            <input
              type="text"
              id="prof-nombre"
              placeholder="Nombre y apellido"
            />
          </div>
          <div class="input-group">
            <label for="prof-email">Email</label>
            <input
              type="email"
              id="prof-email"
              placeholder="correo@ejemplo.com"
            />
          </div>
          <div class="input-group">
            <label for="prof-tarjeta">ID de tarjeta</label>
            <input type="text" id="prof-tarjeta" placeholder="Identificación" />
          </div>
          <button id="guardar-profesor">Guardar Profesor</button>
        </div>

        <div class="table-container">
          <h2>Listado de Profesores</h2>
          <table id="tabla-profesores">
            <thead>
              <tr>
                <th>Nombre</th>
                <th>Email</th>
                <th>ID de Tarjeta</th>
                <th>ID Profesor</th>
                <th>Acciones</th>
              </tr>
            </thead>
            <tbody id="tbody-profesores">
              <% if (profesores && profesores.length > 0) { %> <%
              profesores.forEach(profesor => { %>
              <tr>
                <td><%= profesor.nombre %></td>
                <td><%= profesor.email ? profesor.email : '-' %></td>
                <td><%= profesor.tarjeta_id %></td>
                <td><%= profesor.profesor_id %></td>
                <td>
                  <a
                    href="/admin/profesores/editar/<%= profesor.profesor_id %>"
                    class="btn-editar"
                    >Editar</a
                  >
                  <button
                    id="borrar-profesor"
                    class="btn-eliminar"
                    data-tarjeta="<%= profesor.tarjeta_id %>"
                  >
                    Eliminar
                  </button>
                </td>
              </tr>
              <% }); %> <% } else { %>
              <tr>
                <td colspan="5">No hay profesores registrados.</td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>

      <!-- Pestaña de Aulas -->
      <div id="aulas" class="tab-content">
        <div class="form-container">
          <h2>Registrar Aula</h2>
          <div class="input-group">
            <label for="aula-nombre">Nombre del Aula</label>
            <input
              type="text"
              id="aula-nombre"
              placeholder="Ej: Laboratorio 1"
            />
          </div>
          <div class="input-group">
            <label for="aula-esp32">ID ESP32</label>
            <input
              type="text"
              id="aula-esp32"
              placeholder="ID del dispositivo asociado"
            />
          </div>
          <button id="guardar-aula">Guardar Aula</button>
        </div>

        <div class="table-container">
          <h2>Listado de Aulas</h2>
          <table id="tabla-aulas">
            <thead>
              <tr>
                <th>Nombre</th>
                <th>ESP32 ID</th>
                <th>ID Aula</th>
                <th>Acciones</th>
              </tr>
            </thead>
            <tbody id="tbody-aulas">
              <% if (aulas && aulas.length > 0) { %>
                <% aulas.forEach(aula => { %>
                  <tr>
                    <td><%= aula.nombre %></td>
                    <td><%= aula.esp32_id ? aula.esp32_id : '-' %></td>
                    <td><%= aula.aula_id %></td>
                    <td>
                      <a href="/admin/aula/editar/<%= aula.aula_id %>" class="btn-editar">Editar</a>
                      <button class="btn-eliminar" data-esp32-id="<%= aula.esp32_id %>">Eliminar</button>
                    </td>
                  </tr>
                <% }); %>
              <% } else { %>
                <tr>
                  <td colspan="4">No hay aulas registradas.</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>

      <!-- Pestaña de Materias -->
      <div id="materias" class="tab-content">
        <div class="form-container">
          <h2>Registrar Materia</h2>
          <div class="input-group">
            <label for="materia-nombre">Nombre de la materia</label>
            <input
              type="text"
              id="materia-nombre"
              placeholder="Ej: Cálculo I"
            />
          </div>
          <button id="guardar-materia">Guardar Materia</button>
        </div>

        <div class="table-container">
          <h2>Listado de Materias</h2>
          <table id="tabla-materias">
            <thead>
              <tr>
                <th>Nombre</th>
                <th>ID Materia</th>
                <th>Acciones</th>
              </tr>
            </thead>
            <tbody id="tbody-materias">
              <% if (materias && materias.length > 0) { %>
                <% materias.forEach(materia => { %>
                  <tr>
                    <td><%= materia.nombre %></td>
                    <td><%= materia.materia_id %></td>
                    <td>
                      <a href="/admin/materias/editar/<%= materia.materia_id %>" class="btn-editar">Editar</a>
                      <button class="btn-eliminar" data-id="<%= materia.materia_id %>">Eliminar</button>
                    </td>
                  </tr>
                <% }); %>
              <% } else { %>
                <tr>
                  <td colspan="3">No hay materias registradas.</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>

      <!-- Pestaña de Asignaciones -->
      <div id="asignaciones" class="tab-content">
        <div class="form-container">
          <h2>Asignar Materias a Profesores</h2>
          <div class="input-group">
            <label for="asign-profesor">Profesor</label>
            <select id="asign-profesor">
              <option value="">Seleccione un profesor</option>
              <% if (profesores && profesores.length > 0) { %> 
                <% profesores.forEach(profesor => { %>
                  <option value="<%= profesor.profesor_id %>">
                    <%= profesor.nombre %> (ID: <%= profesor.profesor_id %>)
                  </option>
                <% }); %> 
              <% } %>
            </select>
          </div>
          <div class="input-group">
            <label for="asign-materia">Materia</label>
            <select id="asign-materia">
              <option value="">Seleccione una materia</option>
              <% if (materias && materias.length > 0) { %> 
                <% materias.forEach(materia => { %>
                  <option value="<%= materia.materia_id %>">
                    <%= materia.nombre %> (ID: <%= materia.materia_id %>)
                  </option>
                <% }); %> 
              <% } %>
            </select>
          </div>
          <button id="guardar-asignacion">Guardar Asignación</button>
        </div>

        <div class="table-container">
          <h2>Asignaciones Actuales</h2>
          <table id="tabla-asignaciones">
            <thead>
              <tr>
                <th>Profesor (ID)</th>
                <th>Materia (ID)</th>
                <th>Acciones</th>
              </tr>
            </thead>
            <tbody id="tbody-asignaciones">
              <% if (asignaciones && asignaciones.length > 0) { %>
                <% asignaciones.forEach(asignacion => { %>
                  <tr>
                    <td><%= asignacion.profesor_nombre %> (ID: <%= asignacion.profesor_id %>)</td>
                    <td><%= asignacion.materia_nombre %> (ID: <%= asignacion.materia_id %>)</td>
                    <td>
                      <button class="btn-eliminar eliminar-asignacion"
                        data-profesor-id="<%= asignacion.profesor_id %>"
                        data-materia-id="<%= asignacion.materia_id %>">
                        Eliminar
                      </button>
                    </td>
                  </tr>
                <% }); %>
              <% } else { %>
                <tr>
                  <td colspan="3">No hay asignaciones registradas.</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <script>
      function openTab(tabName) {
        // Remover clase active de todos los botones
        const buttons = document.querySelectorAll('.collapsible');
        buttons.forEach(btn => btn.classList.remove('active'));
        
        // Ocultar todas las pestañas
        const tabContents = document.getElementsByClassName("tab-content");
        for (let i = 0; i < tabContents.length; i++) {
          tabContents[i].classList.remove("active");
        }
        
        // Mostrar pestaña activa
        const activeTab = document.getElementById(tabName);
        if (activeTab) {
          activeTab.classList.add("active");
        }
        
        // Marcar botón como activo
        const activeButton = document.querySelector(`[onclick="openTab('${tabName}')"]`);
        if (activeButton) {
          activeButton.classList.add('active');
        }
      }

      document.addEventListener("DOMContentLoaded", function () {
        openTab("profesores");
        
        // Añadir animaciones suaves a los inputs
        const inputs = document.querySelectorAll('input, select');
        inputs.forEach(input => {
          input.addEventListener('focus', function() {
            this.parentElement.style.transform = 'scale(1.02)';
          });

          input.addEventListener('blur', function() {
            this.parentElement.style.transform = 'scale(1)';
          });
        });
      });
    </script>
    <script src="/js/profesores.js"></script>
    <script src="/js/aulas.js"></script>
    <script src="/js/materias.js"></script>
    <script src="/js/asignaciones.js"></script>
  </body>
</html>